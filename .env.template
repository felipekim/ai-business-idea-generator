# AI Business Idea Generator - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_business_ideas
POSTGRES_DB=ai_business_ideas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Security Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Performance Configuration
MAX_WORKER_THREADS=8
MAX_CONCURRENT_WORKFLOWS=3
WORKFLOW_TIMEOUT_MINUTES=15
MIN_IDEA_QUALITY_SCORE=6.0

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Automation Configuration
AUTOMATION_ENABLED=true
WEEKLY_AUTOMATION_SCHEDULE="0 9 * * 1"  # Monday 9 AM

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

